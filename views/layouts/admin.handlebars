<!doctype html>
<html lang="pl">
<head>
	<meta charset="utf-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

	<title>{{title}}</title>

	<meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <meta name="viewport" content="width=device-width" />

		<link rel="stylesheet" href="https://bootswatch.com/sandstone/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="/css/bootstrap-table.css">

    <!-- Bootstrap core CSS     -->
    <link href="/css/bootstrap.css" rel="stylesheet" />

    <!--  Material Dashboard CSS    -->
    <link href="/css/material-dashboard.css" rel="stylesheet"/>

    <!--     Fonts and icons     -->
    <link href="http://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" rel="stylesheet">
    <link href='http://fonts.googleapis.com/css?family=Roboto:400,700,300|Material+Icons' rel='stylesheet' type='text/css'>

		<script src="/js/jquery-3.1.0.min.js" type="text/javascript"></script>
		<script src="/js/jquery-ui.min.js" type="text/javascript"></script>
		<script src="/js/admins.js"></script>
		<!--  Notifications Plugin    -->
		<script src="/js/bootstrap-notify.js"></script>
</head>

<body>

	<div class="wrapper">
	  <div class="sidebar" data-color="purple" data-image="/img/sidebar-1.jpg">
			<div class="logo">
				<a href="/ap" class="simple-text">
					Wolves Page
				</a>
			</div>
			<div class="sidebar-wrapper">
				<ul class="nav">
					<li {{#if navAdmin}} class="active" {{/if}}>
						<a href="/ap">
							<i class="material-icons">dashboard</i>
							<p>Dashboard</p>
						</a>
					</li>
					{{#if user.permissions.addUser}}
					<li {{#if navAdduser}} class="active" {{/if}}>
						<a href="/ap/adduser">
							<i class="material-icons">person_add</i>
							<p>Dodaj użytkownika</p>
						</a>
					</li>
					{{/if}}
					<li {{#if navUsers}} class="active" {{/if}}>
						<a href="/ap/users">
							<i class="material-icons">people</i>
							<p>Lista użytkowników</p>
						</a>
					</li>
					{{#if user.permissions.editUser}}
					<li {{#if navInactiveusers}} class="active" {{/if}}>
						<a href="/ap/users?show=inactive">
							<i class="material-icons">people_outline</i>
							<p>Nieaktywni</p>
						</a>
					</li>
					{{/if}}
					{{#if user.permissions.addGame}}
					<li {{#if navAddgame}} class="active" {{/if}}>
						<a href="/ap/addgame">
							<i class="material-icons">add_circle</i>
							<p>Dodaj mecz</p>
						</a>
					</li>
					{{/if}}
					<li {{#if navGames}} class="active" {{/if}}>
						<a href="/ap/games">
							<i class="material-icons">today</i>
							<p>Lista meczów</p>
						</a>
					</li>
					{{#if user.permissions.addEvent}}
					<li {{#if navAddevent}} class="active" {{/if}}>
						<a href="/ap/addevent">
							<i class="material-icons">create_new_folder</i>
							<p>Dodaj rozgrywki</p>
						</a>
					</li>
					{{/if}}
					<li {{#if navEvents}} class="active" {{/if}}>
						<a href="/ap/events">
							<i class="material-icons">folder</i>
							<p>Lista rozgrywek</p>
						</a>
					</li>
				</ul>
			</div>
		</div>

	  <div class="main-panel">
			<nav class="navbar navbar-transparent navbar-absolute">
				<div class="container-fluid">
					<div class="navbar-header">
						<button type="button" class="navbar-toggle" data-toggle="collapse">
							<span class="sr-only">Toggle navigation</span>
							<span class="icon-bar"></span>
							<span class="icon-bar"></span>
							<span class="icon-bar"></span>
						</button>
						<a class="navbar-brand" href="#">{{title}}</a>
					</div>
					<div class="collapse navbar-collapse">
						<ul class="nav navbar-nav navbar-right">
							<li>
								<a href="/ap" class="dropdown-toggle">
									<i class="material-icons">dashboard</i>
									<p class="hidden-lg hidden-md">Dashboard</p>
								</a>
							</li>
							<li>
								<a href="/" class="dropdown-toggle">
	 							   <i class="material-icons">change_history</i>
	 							   <p class="hidden-lg hidden-md">Back to page</p>
	 						   </a>
							</li>
						</ul>
					</div>
				</div>
			</nav>
			<div class="content">
				<div class="container-fluid">

	        {{{body}}}
	      </div>
	    </div>
			<footer class="footer">
	     <div class="container-fluid">
				 <nav class="pull-left">
					 <ul>
						 <li>
							 <a href="/">
								 Home
							 </a>
						 </li>
						 <li>
							 <a href="/stats">
								 Stats
							 </a>
						 </li>
					 </ul>
				 </nav>
				 <p class="copyright pull-right">
					 &copy; <script>document.write(new Date().getFullYear())</script> Wolves Page
				 </p>
			 </div>
		 </footer>
	 </div>
	</div>
</body>

	<!--   Core JS Files   -->
  <script src="/js/bootstrap-table.js"></script>
  <script src="/js/bootstrap-table-en-US.js"></script>
	<script src="/js/bootstrap.js" type="text/javascript"></script>
	<script src="/js/material.min.js" type="text/javascript"></script>

	<!--  Charts Plugin -->
	<script src="/js/chartist.min.js"></script>

	<!--  Notifications Plugin    -->
	<script src="/js/bootstrap-notify.js"></script>

	<!--  Moment plugin -->
	<script src="/js/moment.min.js" type="text/javascript"></script>

  <!--  Plugin for the Datepicker, full documentation here: http://www.eyecon.ro/bootstrap-datepicker/ <script src="/js/bootstrap-datepicker.js" type="text/javascript"></script>-->

	<!-- Sweet Alert 2 plugin -->
	<script src="/js/sweetalert2.js"></script>

	<!-- Material Dashboard javascript methods -->
	<script src="/js/material-dashboard.js"></script>


</html>
