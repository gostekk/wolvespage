<div class="row">
	<div class="col-md-12">
	  <div class="card">
      <div class="card-header" data-background-color="purple">
	      <h4 class="title">Statystyka dla:</h4>
	      <p class="category">{{eventOverview.season}} | {{eventOverview.shortname}} | {{eventOverview.type}}</p>
	    </div>
      <div class="card-content table-responsive">
        <div class="col-sm-12">
          <!-- Score table ! -->
          <table id="playersTable"
                 data-toggle="table"
                 data-method="post"
                 data-classes="table"
                 data-sort-name="points"
                 data-sort-order="desc"
                 data-url="/ap/event/{{eventOverview._id}}">
            <thead>
              <tr>
                <th data-field="_id" data-visible="false">id</th>
                <th data-field="username" data-visible="false" data-sortable="true">username</th>
                <th data-field="name" data-sortable="true">Imie</th>
                <th data-field="surname" data-sortable="true">Nazwisko</th>
                <th data-field="shirtnumber" data-sortable="true">Nr</th>
                <th data-field="position" data-sortable="true">Pozycja</th>
                <th data-field="gp" data-sortable="true">GP</th>
                <th data-field="goals" data-sortable="true">G</th>
                <th data-field="assists" data-sortable="true">A</th>
                <th data-field="points" data-sortable="true">P</th>
                <th data-field="pim" data-sortable="true">Mk</th>
              </tr>
            </thead>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
